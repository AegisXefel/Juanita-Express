{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/magaly{,/**}",
        "destination": "/magaly/magaly.html"
      },
      {
        "source": "/pasajeros{,/**}",
        "destination": "/pasajeros/index.html"
      },
      {
        "source": "/votaciones{,/**}",
        "destination": "/votaciones/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
